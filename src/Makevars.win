CXX_STD = CXX11
PKG_LIBS += `${R_HOME}/bin/Rscript -e "cytolib:::cytolib_LdFlags();cat(' ');RProtoBufLib:::LdFlags()"`

.PHONY: all clean 

all: $(SHLIB) 
	if [ `uname -s` = 'Darwin' ]; then install_name_tool -change /usr/local/clang4/lib/libc++.1.dylib /usr/lib/libc++.1.dylib $(SHLIB); fi


clean:
	rm -f $(OBJECTS) $(SHLIB)
